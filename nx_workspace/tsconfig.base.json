{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@b2b/api": ["libs-next/nxt-api/src/index.ts"],
      "@b2b/api/server": ["libs-next/nxt-api/src/server.ts"],
      "@b2b/auth": ["libs-next/nxt-auth/src/index.ts"],
      "@b2b/auth/server": ["libs-next/nxt-auth/src/server.ts"],
      "@b2b/nxt-layouts": ["libs-next/nxt-layouts/src/index.ts"],
      "@b2b/nxt-layouts/server": ["libs-next/nxt-layouts/src/server.ts"],
      "@b2b/nxt-query": ["libs-next/nxt-query/src/index.ts"],
      "@b2b/query/server": ["libs-next/nxt-query/src/server.ts"],
      "@b2b/store": ["libs-next/nxt-store/src/index.ts"],
      "@b2b/store/server": ["libs-next/nxt-store/src/server.ts"],
      "@b2b/ui-components": ["libs-ui/ui-components/src/index.ts"],
      "@nx-workspace/nxt-core": ["libs-next/nxt-core/src/index.ts"],
      "@nx-workspace/nxt-core/server": ["libs-next/nxt-core/src/server.ts"],
      "@nx-workspace/nxt-shared": ["libs-next/nxt-shared/src/index.ts"],
      "@nx-workspace/nxt-shared/server": ["libs-next/nxt-shared/src/server.ts"],
      "@nx-workspace/ui-core": ["libs-ui/ui-core/src/index.ts"],
      "@nx-workspace/ui-core/server": ["libs-ui/ui-core/src/server.ts"],
      "@nx-workspace/ui-shared": ["libs-ui/ui-shared/src/index.ts"],
      "@nx-workspace/ui-shared/server": ["libs-ui/ui-shared/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
